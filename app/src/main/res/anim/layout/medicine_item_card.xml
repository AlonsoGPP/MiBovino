<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/medical_card"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/medicineCardImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/upload_image" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/PurchasedDate"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/purchased_date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/PurchasedDateValueMedicineCard"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/PurchasedDate"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/NameValueMediCard"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/Quantity"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/quantity"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/QuantityValueMediCard"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/Quantity"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/PrescribedBy"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/prescribed_by"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/PrescribedByValueMediCard"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/PrescribedBy"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/Supplier"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/supplier"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/SupplierValueMediCard"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/Supplier"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>
