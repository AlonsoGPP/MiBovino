<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:columnCount="2"
        android:rowCount="4">

        <ImageButton
            android:id="@+id/BtnMyAnimals"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/my_animals_btn"
            android:onClick="navigateToMyAnimal"
            android:text="@string/blank" />

        <ImageButton
            android:id="@+id/BtnAnimalHistory"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="navigateToAnimalEvent"
            android:background="@drawable/animal_history"
            android:text="Button" />

        <ImageButton
            android:id="@+id/BtnMedicine"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/medicine_btn"
            android:onClick="MedicalCabinet"
            android:text="Button" />

        <ImageButton
            android:id="@+id/BtnFeed"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/feed_btn"
            android:onClick="navigateToFeedHostory"
            android:text="Button" />

        <ImageButton
            android:id="@+id/BtnFarmTask"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/farm_task_btn"
            android:onClick="navigateToFarmTask"
            android:text="Button" />

    </GridLayout>
</ScrollView>
